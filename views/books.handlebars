
<h1>Update Books:</h1>

<h2>Add a Title:</h2>
<form id="addbook" action="/books" method="post">
    Title: <input type="text" name="Title"><br>
    <input type="submit" value="Submit">
 </form>
<br/>
<table>
  <thead>
    <th>Title</th>
  </thead>
  <tbody>
    {{#each Book}}
    <tr>
      <td><a href = /books/{{ID}}>{{Title}}</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
