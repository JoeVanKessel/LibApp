{{#each Title}}
<h1>{{Title}}:</h1>
{{/each}}
<form id='update' action='/abook/{{ID}}', method='put'>
<table>
  <thead>
    <th>Title</th>
  </thead>
  <tbody>
    {{#each Title}}
          <tr>

            <td><input type= 'text' value='{{Title}}'></input></td>
            <td><button onclick="deletetitle({{ID}})">Delete</button><td>
          </tr>
          {{/each}}
  </tbody>

  <thead>
    <th>Author First</th>
    <th>Author Last</th>
  </thead>
  <tbody>
    {{#each Authors}}
          <tr>

            <td><input type= 'text' value={{Fname}}></input></td>
            <td><input type= 'text' value={{Lname}}></input></td>
            <td><button onclick="deleteauthor({{AID}})">Delete</button></td>

        </tr>
      {{/each}}
  </tbody>

  <thead>
    <th>Publisher(s)</th>
  </thead>
  <tbody>
    {{#each Publishers}}
        <tr>
          <td><input type= 'text' value={{pub_name}}></input></td>
          <td><button onclick="deletepublisher({{PID}})">Delete</button></td>
        </tr>
    {{/each}}
  </tbody>


  <thead>
    <th>Genre(s)</th>
  </thead>
  <tbody>
    {{#each Genres}}
          <tr>
            <td><input type= 'text' value={{gen_name}}></input></td>
            <td><button onclick="deletegenre({{GID}})">Delete</button></td>
          </tr>
      {{/each}}
    </tbody>
</table>
</form>
<h1>{{message}}</h1>
